extends ../layout

block content
  .row
    .col-lg-12
      h1.page-header
        | 项目需求管理
      ol.breadcrumb
        li
          i.fa.fa-dashboard
          span &emsp;
          a(href='index.html') ESPT 管理系统
        li.active
          i.fa.fa-table
          |  项目需求列表
  .row
    .col-lg-12
      .row
        .col-md-12.sub-btn
          a.pull-right.btn.btn-default(href="/admin/require/add") 新增项目需求
      .row
        .table-responsive
          table.table.table-bordered.table-hover.table-striped(style="table-layout：fixed")
            thead
              tr
                th 名称
                th 简介
                th 地区
                th 行业
                th 链接
                th 详情
                th 需求
                th 需求说明
                th 联系电话
                th 操作
            tbody
              each require in requires
                tr
                  td=require.name
                  td=require.intro
                  td=require.area
                  td=require.industry
                  td=require.link
                  td.longtext-td
                    div=require.detail
                  td=require.requireType
                  td=require.requireDetail
                  td=require.tel
                  td(width="104")
                    a.btn.btn-primary.btn-xs(href="/admin/require/update/#{require._id}") 修改
                    span &emsp;
                    a.btn.btn-danger.btn-xs(onclick="hide('#{require._id}',this,'project')") 删除
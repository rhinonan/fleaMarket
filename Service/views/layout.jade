            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') 首页
        ul.nav.navbar-right.top-nav
          li.dropdown
            a.dropdown-toggle(href="#" data-toggle="dropdown")
              i.fafa-envelope
              b.caret
        div.collapse.navbar-collapse.navbar-ex1-collapse
          ul.nav.navbar-nav.side-nav
            if nav=='index'
              li.active
                a(href="../../../admin/index")
                  i.fa-dashboard.fa-fw.fa
                  span &emsp;管理首页 
            else 
              li
                a(href="../../../admin/index")
                  i.fa-dashboard.fa-fw.fa
                  span &emsp;管理首页 
            if (nav=='users')
              li.active
                a(href="../../../co")
                  i.glyphicon-user.glyphicon.fa-fw
                  span &emsp;商品管理
            else 
              li
                a(href="../../../co")
                  i.glyphicon-user.glyphicon.fa-fw
                  span &emsp;商品管理
            if nav == 'dynamic'
              li.active
                a(href="../../../store")
                  i.glyphicon-equalizer.glyphicon.fa-fw
                  span &emsp;店铺管理
            else 
              li
                a(href="../../../store")
                  i.glyphicon-equalizer.glyphicon.fa-fw
                  span &emsp;店铺管理
            if nav == 'require'
              li.active
                a(href="../../../user")
                  i.glyphicon-magnet.glyphicon.fa-fw
                  span &emsp;用户管理
            else 
              li
                a(href="../../../user")
                  i.glyphicon-magnet.glyphicon.fa-fw
                  span &emsp;用户管理
            if nav == 'activity'
              li.active
                a(href="../../../school")
                  i.glyphicon-tree-deciduous.glyphicon.fa-fw
                  span &emsp;学校管理
            else 
              li
                a(href="../../../school")
                  i.glyphicon-tree-deciduous.glyphicon.fa-fw
                  span &emsp;学校管理
            if nav == 'topic'
              li.active
                a(href="../../../flea")
                  i.glyphicon-signal.glyphicon.fa-fw
                  span &emsp;二手物品管理
            else 
              li
                a(href="../../../flea")
                  i.glyphicon-signal.glyphicon.fa-fw
                  span &emsp;二手物品管理

      div#page-wrapper
        .container-fluid
          block content

extends ../layout

block content
  .row
    .col-lg-12
      h1.page-header
        | 学校管理
      ol.breadcrumb
        li
          i.fa.fa-dashboard
          span &emsp;
          a(href='index.html') fleaMarket 管理系统
        li.active
          i.fa.fa-table
          |  新增学校
  .row
    .col-md-12
      form.form-horizontal(action="../../school/add" method="POST")
        .form-group
          label.col-sm-2.control-label(for='schoolname') 学校名称
          .col-sm-4
            input#schoolname.form-control(type='text',name="schoolname", placeholder='学校名称')
        .form-group
          .col-sm-offset-2.col-sm-6
            button.btn.btn-default(type='submit') 提交

